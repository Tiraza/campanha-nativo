<resources>

        <!-- Base application theme. -->
        <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
                <!-- Customize your theme here. -->
                <item name="colorPrimary">@color/primary</item>
                <item name="colorPrimaryDark">@color/primary_dark</item>
                <item name="colorAccent">@color/accent</item>
                <item name="android:textColor">@color/primary_text</item>
                <item name="android:textColorSecondary">@color/secondary_text</item>
                <item name="android:colorBackground">@color/primary</item>
                <item name="android:textColorHint">@color/secondary_text</item>
                <item name="android:colorControlNormal">@color/secondary_text</item>
                <item name="android:colorControlActivated">@color/primary_text</item>
                <item name="android:colorControlHighlight">@color/primary_text</item>
                <item name="android:editTextColor">@color/primary_text</item>

                <item name="windowActionBar">false</item>
                <item name="windowNoTitle">true</item>
        </style>

</resources>
